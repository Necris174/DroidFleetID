<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FBE2BF"
        >

        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/icon_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_moving"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/real_speed">

            </ImageView>

            <TextView
                android:id="@+id/text_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="46"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold">


            </TextView>

        </RelativeLayout>


        <TextView
            android:id="@+id/device_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:padding="2dp"
            android:text="MAN"
            android:textSize="20sp"
            android:fontFamily="@font/font_century_gothic"
            app:layout_constraintLeft_toRightOf="@+id/relative_layout"
            app:layout_constraintTop_toTopOf="parent">
        </TextView>

        <TextView
            android:id="@+id/device_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_century_gothic"
            android:layout_marginStart="18dp"
            android:padding="2dp"
            android:text="H999HK174"
            android:textSize="20sp"
            app:layout_constraintLeft_toRightOf="@+id/device_model"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/futura"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            android:text="ул. Чайковского 20, Ленинский район \n г.Челябинск"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/relative_layout"
            app:layout_constraintTop_toBottomOf="@+id/device_model" />

        <TextView
            android:id="@+id/last_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50 c"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:padding="2dp"
            android:background="@drawable/radius">

        </TextView>





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>